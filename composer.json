{
    "name": "kavenegar/php",
    "type": "library",
    "description": "A PHP wrapper for Kavenegar's API",
    "keywords": ["kavenegar", "sms", "api"],
    "homepage": "http://github.com/Kavenegar/kavenegar-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Kavenegar API Team",
            "email": "support@kavenegar.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Kavenegar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kavenegar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "find src -name '*.php' -exec php -l {} \\;"
    },
    "minimum-stability" : "stable"
}
